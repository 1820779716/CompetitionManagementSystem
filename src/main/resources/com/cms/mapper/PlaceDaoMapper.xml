<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cms.dao.IPlaceDao">

    <!-- 根据赛场id查询所有赛事的赛场安排 -->
    <select id="getPlaceByPid" parameterType="int" resultType="com.cms.entity.Place">
        select * from Place where pid=#{pid}
    </select>

    <!-- 根据赛事id查询所有赛场 -->
    <select id="getPlaceByCid" parameterType="int" resultType="com.cms.entity.Place">
        select * from Place where cid=#{cid}
    </select>

    <insert id="insertPlace" parameterType="com.cms.entity.Place">
        insert into Place values (#{place.pid}, #{place.school}, #{place.pname}, #{place.pnum}, #{place.cid}, #{place.csize}, #{place.manager})
        <selectKey keyColumn="1" resultType="int" keyProperty="pid" order="AFTER">
            select last_insert_id()
        </selectKey>
    </insert>

</mapper>