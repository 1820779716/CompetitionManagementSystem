<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cms.dao.IScheduleDao">

    <!-- 根据参赛者id查询所有成绩 -->
    <select id="selectGradeByCompetitorId" parameterType="String" resultType="com.cms.entity.Schedule">
        select * from Schedule where competitorId=#{competitorId} order by grade DESC;
    </select>

    <!-- 根据赛事id查询所有成绩 -->
    <select id="selectGradeByCid" parameterType="String" resultType="com.cms.entity.Schedule">
        select * from Schedule where cid=#{cid} order by grade DESC;
    </select>

    <!-- 获取一等奖人数 -->
    <select id="selectGradeAByCid" resultType="int">
        select count(*) from Schedule where grade>=90;
    </select>

    <!-- 获取二等奖人数 -->
    <select id="selectGradeBByCid" resultType="int">
        select count(*) from Schedule where grade &lt; 90 and grade>=75;
    </select>

    <!-- 获取三等奖人数 -->
    <select id="selectGradeCByCid" resultType="int">
        select count(*) from Schedule where grade &lt; 75 and grade>=60;
    </select>

    <!-- 获取未获奖人数 -->
    <select id="selectGradeDByCid" resultType="int">
        select count(*) from Schedule where grade &lt; 60;
    </select>
</mapper>